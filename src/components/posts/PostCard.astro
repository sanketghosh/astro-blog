---
interface PostCardProps {
  head: string;
  body: string;
}

const { head, body } = Astro.props as PostCardProps;
---

<div
  class="flex flex-col transition-colors gap-3 items-start justify-center px-4 py-3 w-full border border-zinc-300 hover:border-zinc-500 rounded-md"
>
  <h1 class="font-semibold underline underline-offset-2 rounded-md">
    {head}
  </h1>
  <p class="text-sm">{body}</p>
