---
/* styles */
import "../styles/index.css";

/* compoenents */
import MainHead from "./MainHead.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

interface MainLayoutProps {
  title?: string;
  description?: string;
}

const { title, description } = Astro.props as MainLayoutProps;
---

<html lang="en">
  <MainHead title={title} description={description} />
  <body
    class="bg-zinc-100 text-zinc-900 selection:bg-black selection:text-white"
  >
    <div class="min-h-screen mx-auto max-w-2xl px-3 relative">
      <Navbar />
      <main class="pb-28">
        <slot>defult text</slot>
      </main>
      <Footer />
    </div>
  </body>
</html>
